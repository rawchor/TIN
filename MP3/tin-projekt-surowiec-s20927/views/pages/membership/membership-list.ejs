<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Membership</h2>
        <list>
            <table class="table-list">
                <thead>
                    <th>Competitor</th>
                    <th>Club</th>
                    <th>Date from</th>
                    <th>Date to</th>
                    <th>Actions</th>
                </thead>

                <tbody>
                <% for (let membership of memberships) { %>
                    <tr>
                        <td><%= membership.competitor.name + " " + membership.competitor.surname %></td>
                        <td><%= membership.club.name %></td>
                        <td><%= membership.dateFrom %></td>
                        <td><%= membership.dateTo %></td>
                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a href="/membership/details/<%= membership._id %>" class="list-actions-button-details">Details</a>
                                </li>
                                <li>
                                    <a href="/membership/edit/<%= membership._id %>" class="list-actions-button-edit">Edit</a>
                                </li>
                                <li>
                                    <a href="/membership/delete/<%= membership._id %>" class="list-actions-button-delete">Delete</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>           
        </list>
        <p><a href="/membership/add" class="button-add">Add</a></p>
    </main>
<%- include('../../fragments/footer.ejs') %>